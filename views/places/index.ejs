<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hello Bulma!</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    <link rel="stylesheet" href="/css/main.css">
  </head>
  <body>
    <nav class="navbar has-background-primary-dark" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
          <a class="navbar-item" href="https://bulma.io">
            <img src="/b2.png"  >
          </a>
      
          <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>
      
        <div id="navbarBasicExample" class="navbar-menu">
          <div class="navbar-start">
            <a class="navbar-item has-text-white">
              Home
            </a>
      
            <a class="navbar-item has-text-white" href='/places'>
              places
            </a>
      
              <a class="navbar-item has-text-white" href='/events'>
                events
              </a>
      
            </div>
          </div>
      
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
                <a class="button is-primary">
                  <strong>Sign up</strong>
                </a>
                <a class="button is-light">
                  Log in
                </a>
              </div>
            </div>
          </div>
        </div>
      </nav>
    <main>
        <div class='has-text-centered title'> 
            <p>Places</p>
        </div> 
        <div class= 'columns'>
            <%places.forEach(p => { %>
                <div class='column is-half is-size-5 has-text-black m-auto'>
                    <div class='column'>
                        <div class="card">
                            <header class='card-header'>
                                <p class="card-header-title">
                                    <%=p.name %>
                                </p></header>
                                <div class="card-image">
                                    <figure class="image is-4by3">
                                        <img src="<%= p.img %>" alt="Placeholder image">
                                    </figure>
                                </div>
                                <div class="card-content is-overlay mt-6">
                                    <span class="tag is-primary"><%= p.type %></span>
                                </div>
                            </div>
                            
                        </div> 
                    </div>
                    <% }) %>
                    
                    
                    
                </div>
                <div  class='has-text-centered  is-size-5'>
                    <button class="button subtitle is-primary"><a  href="places/new"> ADD A NEW PLACE</a></button>
                </div>
        </main>
    </div>
</body>
</html>